<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="x_pos" default="0.0" />
    <arg name="y_pos" default="1.0" />
    <arg name="z_pos" default="0.05" />
    <arg name="yaw" default="0.0" />
    

  <rosparam  file="$(find exprob_assignment_2)/config/joint_state_controller.yaml" command="load" />
  <rosparam file="$(find exprob_assignment_2)/config/aruco_navigation.yaml" command="load" />
  
  
  <param name="robot_description" command="$(find xacro)/xacro '$(find rosbot_description)/urdf/rosbot.xacro'"/>  
 
  <node name="joint_state_controller_spawner" pkg="controller_manager" type="spawner" output="screen" args="joint_state_controller" />
  
  <node name="rosbot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model rosbot -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -Y $(arg yaw)"/>
  
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
  
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find exprob_assignment_2)/rviz/rosbot.rviz" required="true" output="screen"/>
 
  
</launch>
